{
  "name": "advent-of-code-2015",
  "version": "1.0.0",
  "description": "Advent Of Code 2015 problems",
  "main": "index.js",
  "scripts": {
    "commit": "cz",
    "day01.p1": "node ./src/runner.js ./day01/part1.js",
    "day01.p2": "node ./src/runner.js ./day01/part2.js",
    "test": "jest --passWithNoTests",
    "test:watch": "npm test -- --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,json,ts,tsx,scss}": [
      "prettier --write"
    ]
  }
}
